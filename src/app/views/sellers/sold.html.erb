<% if @listings.length > 0%>
<h2>Coaching Sessions Purchased with <%= current_user.username %></h2>

<% @listings.each do | listing | %>
    <%= image_tag listing.picture if listing.picture.attached? %>
    <br>
    <p><%= link_to 'Show Listing', listing %></p>
    <p><%= number_to_currency(listing.price)%></p>
    <p>Agent: <%= listing.agent %></p>
    <p>Purchased: <%= listing.updated_at.to_date%></p>
    <p>Price per hour: <%= number_to_currency(listing.price)%></p>
    <hr>
<% end%>
<% else %>
    <h3 class="text-center"><%=current_user.username%> currently has no purchased coaching sessions</h3>
<% end %>
