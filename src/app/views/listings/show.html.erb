<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @listing.seller.username %>
</p>

<%= image_tag @listing.picture if @listing.picture.attached? %>

<p>
  <strong>Bio:</strong>
  <%= @listing.bio %>
</p>

<p>
  <strong>Agent:</strong>
  <%= @listing.agent %>
</p>

<p>
  <strong>Availability:</strong>
  <%= @listing.availability %>
</p>

<p>
  <strong>Price for 1 hour of coaching:</strong>
  <%= number_to_currency(@listing.price) %>
</p>
<% if user_signed_in? && current_user.id != @listing.seller_id  %>
  <button class="btn btn-primary" data-stripe="payment">Buy 1 hour of coaching: <%= number_to_currency(@listing.price) %></button>
<% elsif !user_signed_in? %>
  <button type="button" class="btn btn-primary"> <%= link_to 'Please sign in to purchase coaching session', new_user_session_path, class:"text-white" %> </button>
<% end %>
<br>
<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to "Delete", @listing, method: "delete", data: {confirm: "Really delete the listing?"} %>
<%= link_to 'Back', listings_path %>


<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>